{
  "name": "bc-wallet-demo",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "BC Wallet - Verifiable Credential Demo",
  "repository": {
    "url": "https://github.com/bcgov/bc-wallet-demo",
    "type": "git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "prettier": "prettier \"./apps/**/*.{js,json,ts,md,yml,yaml}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "lint": "eslint .",
    "format": "yarn prettier --write",
    "prepare": "husky install",
    "dev": "turbo run dev",
    "test": "yarn run cypress open",
    "build": "turbo run build",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.5.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.2",
    "eslint-plugin-cypress": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "^2.0.1",
    "eslint-plugin-prettier": "^5.2.4",
    "husky": "^7.0.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.4.4"
  },
  "packageManager": "yarn@1.22.22"
}
